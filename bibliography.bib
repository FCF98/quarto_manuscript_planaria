@article{hossack_sensitivity_2020,
	title = {Sensitivity of {Planaria} to {Weak}, {Patterned} {Electric} {Current} and the {Subsequent} {Correlative} {Interactions} with {Fluctuations} in the {Intensity} of the {Magnetic} {Field} of {Earth}},
