@article{lynch_ltp_2007,
	title = {{LTP} consolidation: {Substrates}, explanatory power, and functional significance},
	volume = {52},
	issn = {0028-3908},
	url = {https://www.sciencedirect.com/science/article/pii/S0028390806002371},
